<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.SampleFoodDelivery"  parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/white</item>

        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/CustomTextViewStyle</item>
        <item name="android:windowBackground">@color/white</item>
        <!--        <item name="android:statusBarColor">@color/white</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--<item name="colorControlNormal">@color/black</item>-->

    </style>



    <!--Font Family-->
    <style name="CustomTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <!--TextAppearance-->
    <style name="MyTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="MyTextAppearanceBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--Alert Dialog-->
    <style name="AlertDialogCustom" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColor">#000</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:textViewStyle">@style/CustomTextViewStyle</item>
        <item name="itemTextAppearance">@style/MyTextAppearance</item>
        <item name="android:textAppearance">@style/MyTextAppearance</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>


</resources>